//src/apps/InvalidAgeException.java
package apps;

public class InvalidAgeException extends Exception {
    public InvalidAgeException(String message) {
        super(message);
    }
}
//src/apps/MainAgelogger.java
package apps;

import java.io.IOException;
import java.util.Scanner;
import java.util.logging.FileHandler;
import java.util.logging.Logger;
import java.util.logging.SimpleFormatter;

public class MainAgeLogger {

    private static final Logger logger = Logger.getLogger(MainAgeLogger.class.getName());

    public static void main(String[] args) {
        setupLogger();

        Scanner sc = new Scanner(System.in);
        try {
            System.out.print("Enter your age: ");
            int age = sc.nextInt();

            checkAge(age);
            System.out.println("You are eligible!");

        } catch (InvalidAgeException e) {
            System.out.println("Exception caught: " + e.getMessage());
            logger.severe("Invalid age entered: " + e.getMessage());
        } finally {
            sc.close();
        }
    }

    public static void checkAge(int age) throws InvalidAgeException {
        if (age < 18) {
            throw new InvalidAgeException("Age must be at least 18.");
        }
    }

    private static void setupLogger() {
        try {
            FileHandler fh = new FileHandler("age_errors.log", true); // append mode
            fh.setFormatter(new SimpleFormatter());
            logger.addHandler(fh);
            logger.setUseParentHandlers(false); // prevent console logging
        } catch (IOException e) {
            System.out.println("Failed to set up logger: " + e.getMessage());
        }
    }
}
